"terminologie_extrait": [
{
"terme": "Sandwich principle",
"definition": "Provide positive reinforcement, then the key improvement point, and finish with another positive comment.",
"contexte": "Used for giving concise advice between games in team or league matches.",
"source_url": "[https://www.pingskills.com/blog/pingpod-36-giving-advice](https://www.pingskills.com/blog/pingpod-36-giving-advice)"
}
],
"problemes_solutions": {
"pingpod_36_giving_advice": [
{
"probleme": "Teammates struggle to give useful, concise advice during match intervals.",
"diagnostic": "Players in the match may miss patterns; advisers often overload them with too many points.",
"causes_communes": [
"Heat of competition causing players to overlook effective patterns.",
"Advisers delivering more than 3 points in a one-minute break.",
"Feedback given without positives, making it hard to receive."
],
"solutions_progressives": {
"debutant": [
"Use the sandwich principle for all feedback.",
"Limit advice to 2–3 points during the one-minute break; take 5–10 seconds first to choose them."
],
"intermediaire": [
"Check three phases: serve (which serves drew errors), return (placement/spin/speed that worked), and rally (best direction and tempo).",
"Give concrete reminders tied to specific successes from the previous game."
],
"avance": [
"Tailor tempo advice: sometimes slower rally speed is more effective than faster against certain opponents."
]
},
"exercices_complementaires": [
{
"nom": "One-minute advice drill",
"description": "Observer watches a set, then has exactly one minute to deliver 2–3 points using the sandwich principle.",
"difficulte": "all levels",
"duree": "Not specified by source.",
"materiel": "timer; match play"
},
{
"nom": "Serve/return pattern spotting",
"description": "During a teammate’s game, log which serves and returns cause direct errors; use notes to craft concise advice.",
"difficulte": "intermediate",
"duree": "Not specified by source.",
"materiel": "notepad"
}
],
"metriques_progression": [
"Not specified by source."
],
"erreurs_a_eviter": [
"Bombarding players with 5–6 points in a single break.",
"Ignoring serve and return patterns when advising."
],
